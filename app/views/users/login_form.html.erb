<% if @error_message %>
  <div>
    <ul class="text-danger">
      <li><%= @error_message %></li>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="card col-4 mx-auto p-5">
    <div class="text-center mb-4">ログイン</div>
    <%= form_with url: "/login" do |f| %>
    <div class="form-group">
      <%= f.email_field :email, value: @email, placeholder: 'メールアドレス', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, value: @password, placeholder: 'パスワード', class: 'form-control' %>
    </div>
    <div class="text-center mt-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
    <% end %>
    
    <div class="text-center mt-5"><%= link_to "アカウントをお持ちでない場合", "/signup" %></div>
  </div>
</div>