<% if @error_message %>
<div>
  <ul class="text-danger">
    <li><%= @error_message %></li>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="card col-4 mx-auto p-5">
    <div class="text-center mb-4">ログイン</div>
    <%= form_tag("/login") do %>
    <div class="form-group">
      <input class="form-control" name="email" value="<%= @email %>" placeholder="メールアドレス">
    </div>
    <div class="form-group">
      <input class="form-control" id="password" name="password" type="password" value="<%= @password %>" placeholder="パスワード">
      <small id="emailHelp" class="form-text text-muted">半角英数記号8文字以上</small>
    </div>
    <div class="text-center mt-4">
      <button class="btn btn-primary">ログイン</button>
    </div>
    <% end %>
  </div>
</div>