<% if @error_message %>
<div>
  <ul class="text-danger">
    <li><%= @error_message %></li>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-6 mx-auto">
    <%= form_tag("/login") do %>
    <div class="form-group">
      <label>メールアドレス</label>
      <input class="form-control" name="email">
    </div>
    <div class="form-group">
      <label>パスワード</label>
      <input class="form-control" name="password">
    </div>
    <button class="btn btn-primary">ログイン</button>
    <% end %>
  </div>
</div>